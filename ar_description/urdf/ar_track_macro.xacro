<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://wiki.ros.org/xacro">
  <xacro:macro name="ar_track" params="parent
  *origin
  robot_parameters_file">

    <xacro:property name="robot_parameters" value="${xacro.load_yaml(robot_parameters_file)}" />

    <xacro:property
      name="plate_width" value="${robot_parameters['linear_plate_width']}" />
    <xacro:property
      name="plate_length" value="${robot_parameters['linear_plate_length']}" />
    <xacro:property
      name="plate_height" value="${robot_parameters['linear_plate_height']}" />
    <xacro:property
      name="track_width" value="${robot_parameters['linear_track_width']}" />
    <xacro:property
      name="track_length" value="${robot_parameters['linear_track_length']}" />
    <xacro:property
      name="track_height" value="${robot_parameters['linear_track_height']}" />
    <xacro:property
      name="bearing_spacer" value="${robot_parameters['linear_bearing_spacer']}" />

    <xacro:macro
      name="block_corner" params="x y">
      <visual>
        <origin
          xyz="${x*(plate_width-bearing_spacer)/2} ${y*(plate_length-bearing_spacer)/2} ${-plate_height / 2}"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find ar_description)/meshes/${robot_parameters['mesh_dir']}/track_bearing.stl" />
        </geometry>
      </visual>
      <material name="">
        <color rgba="1 1 0 1" />
      </material>
    </xacro:macro>


    <joint name="linear_base_joint"
      type="fixed">
      <xacro:insert_block name="origin" />
      <parent link="${parent}" />
      <child link="linear_base_link" />
    </joint>

    <link name="linear_base_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <mass value="0.7102" />
        <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
      </inertial>
      <visual>
        <origin
          xyz="0 ${(-track_width+bearing_spacer)/2} ${track_height / 2}"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find ar_description)/meshes/${robot_parameters['mesh_dir']}/track.stl" />
        </geometry>
        <material name="">
          <color rgba="1 1 0 1" />
        </material>
      </visual>
      <visual>
        <origin
          xyz="0 ${(track_width-bearing_spacer)/2} ${track_height / 2}"
          rpy="0 0 0" />
        <geometry>
          <mesh
            filename="file://$(find ar_description)/meshes/${robot_parameters['mesh_dir']}/track.stl" />
        </geometry>
        <material name="">
          <color rgba="1 1 0 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 ${track_height / 2}" rpy="0 0 0" />
        <geometry>
          <box
            size="${track_length} ${track_width} ${track_height}" />
        </geometry>
      </collision>
    </link>

    <gazebo reference="linear_slider_link">
      <material>Gazebo/Grey</material>
    </gazebo>
    <joint
      name="linear_slider_joint" type="prismatic">
      <parent link="linear_base_link" />
      <child link="linear_slider_link" />
      <origin xyz="0 0 ${track_height}" rpy="0 0 0" />
      <axis xyz="1 0 0" />
      <limit
        lower="${(-track_length+plate_width) /2}"
        upper="${(track_length-plate_width)/2}"
        effort="100" velocity="0.5" />
    </joint>

    <link name="linear_slider_link">
      <inertial>
        <origin xyz="0 0 0" rpy="0 0 0.0" />
        <mass value="0.2" />
        <inertia ixx="1e-3" ixy="0.0" ixz="0.0" iyy="1e-3" iyz="0.0" izz="1e-3" />
      </inertial>
      <visual>
        <origin xyz="0 0 ${plate_height / 2}" rpy="0 0 0" />
        <geometry>
          <box
            size="${plate_width} ${plate_length} ${plate_height}" />
        </geometry>
        <material name="">
          <color rgba="1 1 0 1" />
        </material>
      </visual>

      <xacro:block_corner x="1" y="1" />
      <xacro:block_corner x="1" y="-1" />
      <xacro:block_corner x="-1" y="1" />
      <xacro:block_corner x="-1" y="-1" />

      <collision>
        <origin xyz="0 0 ${plate_height / 2}" rpy="0 0 0" />
        <geometry>
          <box
            size="${plate_width} ${plate_length} ${plate_height}" />
        </geometry>
      </collision>
    </link>

  </xacro:macro>
</robot>